<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_author"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/radius_background_small_200"
    app:cardElevation="@dimen/elevation_card_small_100">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_large_100">

        <TextView
            android:id="@+id/textView_author_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jorge Andrés Díaz" />

        <TextView
            android:id="@+id/textView_author_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_100"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_author_name"
            tools:text="JorgeDiazz" />

        <TextView
            android:id="@+id/textView_author_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_100"
            android:autoLink="email"
            android:fontFamily="@font/montserrat_semibold"
            android:minHeight="@dimen/spacing_large_100"
            android:textColor="@color/blue_cornflower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_author_username"
            tools:text="jorgeandresdn1@gmail.com" />

        <TextView
            android:id="@+id/textView_author_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_100"
            android:autoLink="web"
            android:fontFamily="@font/montserrat_semibold"
            android:minHeight="@dimen/spacing_large_100"
            android:textColor="@color/blue_cornflower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_author_email"
            tools:text="anastasia.net" />

        <TextView
            android:id="@+id/textView_author_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal_100"
            android:autoLink="phone"
            android:fontFamily="@font/montserrat_semibold"
            android:minHeight="@dimen/spacing_large_100"
            android:textColor="@color/blue_cornflower"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_author_website"
            tools:text="1-463-123-4445" />

        <com.abdulhakeem.seemoretextview.SeeMoreTextView
            android:id="@+id/textView_full_author_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_600"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_author_phone" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>