<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlueButtonThemeOverlay</item>
    </style>

    <style name="BlueButtonThemeOverlay">
        <item name="colorPrimary">@color/blue_dark</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_star_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
